                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.precio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.cantidad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaCompra)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Proveedores.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Producto.descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.precio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cantidad)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.FechaCompra, "{0:dd/MM/yyyy HH:mm}").

                        </td>
                        <td>
                            <a class="btn btn-dark btn-sm" href="~/Admin/ProductoProveedor/Edit/@item.id">Editar</a>
                            <a class="btn btn-danger btn-sm" href="~/Admin/ProductoProveedor/Delete/@item.id">Borrar</a>
                            <a class="btn btn-success btn-sm" href="~/Admin/ProductoProveedor/Details/@item.id">Detalles</a>
                        </td>
                    </tr>

                }
            </table>
        }
        else
        {
            <p style="color:black">No hay Compras Registradas</p>
        }

    </div>


</div>

