@model PROGESO.Models.Departament
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Tittle</h2>
<br />
</div>
<!-- Start header -->
<div class="all-page-title page-breadcrumb">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-12">
                <h1>
                    Detalles de departamentos
                </h1>
            </div>
        </div>
    </div>
</div>
<h2 class="text-info"></h2>
<br />

@using (Html.BeginForm("Details", "Departament", FormMethod.Post))
{
<div class="form-group-row">
    <div class="col-md-6">
        @Html.HiddenFor(d => d.Id)
        <div>
            <label for="Id">Id</label>
            @Html.TextBoxFor(d => d.Id, "", new { @class = "form-control" })
        </div>
        <div>
            <label for="Name">Nombre</label>
            @Html.TextBoxFor(d => d.Name, "", new { @class = "form-control" })
        </div>

        <br />

    </div>


</div>
    <div class="col-6">
        @Html.Partial("_BackButton")
    </div>
}