@model PROGESO.Models.Departament
@{
    ViewData["Tittle"] = "Departament";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Tittle</h2>
<br />
</div>
<!-- Start header -->
<div class="all-page-title page-breadcrumb">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-12">
                <h1>
                    Ingresar Departamento
                </h1>
            </div>
        </div>
    </div>
</div>
<h2 class="text-info"></h2>
<br />

@using (Html.BeginForm("Create", "Departament", FormMethod.Post))
{
    <div class="form-group-row">
            <div class="col-md-3">
                <div>
                    @Html.LabelFor(d => d.Name)
                    @Html.TextBoxFor(d => d.Name, "", new { @class = "form-control" })
                </div>

                <br />

            </div>
        </div>
    

    <div class="col-md-5">

        @Html.Partial("_CreateAndBackToListButton")
    </div>
}

