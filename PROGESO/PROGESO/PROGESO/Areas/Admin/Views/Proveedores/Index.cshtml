@model IEnumerable<PROGESO.Models.Proveedores>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
</div>
<!-- Start header -->
<div class="all-page-title page-breadcrumb">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-12">
                <h1>
                    Proveedores
                </h1>
            </div>
        </div>
    </div>
</div>
<!-- End header -->

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            @*<h2 class="text-info">Proveedores</h2>*@
        </div>
        <div class="col-lg-6 text-right">
            @Html.Partial("_CreateButtonPartial")
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-sm table-striped border">
                <tr class="table-secondary">
                    <th>
                        <label for="ced_juridica">Ced_Juridica</label>
                    </th>

                    <th>
                        <label for="nombre">Nombre Proveedor</label>
                    </th>
                    <th></th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.ced_juridica)
                </td>
                <td>
                    @Html.DisplayFor(m => item.nombre)
                </td>
                <td>
                    <a class="btn btn-dark btn-sm" href="~/Admin/Proveedores/Edit/@item.ced_juridica">Editar</a>
                    <a class="btn btn-danger btn-sm" href="~/Admin/Proveedores/Delete/@item.ced_juridica">Borrar</a>
                    <a class="btn btn-success btn-sm" href="~/Admin/Proveedores/Details/@item.ced_juridica">Detalles</a>

                </td>

            </tr>

                }
            </table>
        }
        else
        {
            <p style="color:black">No hay proveedores</p>
        }

    </div>


</div>

<div class="form-group">
    <div class="col-6">
        @Html.Partial("_BackButton")
    </div>
    </div>

